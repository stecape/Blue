{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "../",
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "../", // permette di risalire dalla sottocartella (es. client/) alla root
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/global.d.ts",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}